<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorPrimary">@color/offWhite</item>
        <item name="android:colorForeground">@color/offWhite</item>
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/offWhite</item>
        <item name="editTextColor">@color/colorPrimary</item>
        <item name="editTextBackground">@drawable/edit_text_bg</item>
        <item name="android:editTextBackground">@drawable/edit_text_bg</item>
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:statusBarColor">?android:attr/navigationBarColor</item>
        <item name="android:textColorPrimaryInverse">@color/colorPrimaryDark</item>
    </style>
    <style name ="pDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/layer_list</item>
        <item name="android:minWidth">285dp</item>
    </style>


</resources>
