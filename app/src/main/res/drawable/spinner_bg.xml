<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorPrimary" android:startColor="@color/colorPrimary" android:type="linear" />

                    <stroke android:width="0.33dp" android:color="@color/offWhite" />

                    <corners android:radius="4dp" />

                    <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
                </shape>
            </item>

            <item android:right="5dp">

                <bitmap android:gravity="center_vertical|right" android:src="@android:drawable/arrow_down_float" />

            </item>

        </layer-list>

    </item>

</selector>