<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.detroitpencil.jjpod.dpcapp.PricingProfilesScreen1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewPaper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/paper_brand"
            android:textSize="18sp"
          />

        <Spinner
            android:id="@+id/paperSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_bg"
            android:minWidth="285dp"
            android:entries="@array/paper_brand"
             />


        <TextView
            android:id="@+id/textToner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/toner_brand"
            android:textSize="18sp"
           />

        <Spinner
            android:id="@+id/tonerSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_bg"
            android:minWidth="285dp"
            android:entries="@array/toner_band"
           />


        <TextView
            android:id="@+id/textVIewMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/matrix"
            android:textSize="18sp"
           />

        <Spinner
            android:id="@+id/matrixSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/spinner_bg"
            android:minWidth="285dp"
            android:entries="@array/matrix_items"
            />

        <TextView
            android:id="@+id/textVIewUSAExpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/usa_express"
            android:textSize="18sp"
             />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/USAExpressYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="@string/yes"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="386dp" />

            <RadioButton
                android:id="@+id/USAExpressNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:onClick="onRadioButtonClicked"
                android:text="@string/no"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="386dp" />
        </RadioGroup>

        <Button
            android:id="@+id/nextScreenButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="48dp"
            android:text="@string/next"
       />
    </LinearLayout>
</ScrollView>
